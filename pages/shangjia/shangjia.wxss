/* pages/shangjia/shangjia.wxss */
.form-item {
  margin: 20rpx;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

/* 上传按钮样式 */
.upload-btn {
  padding: 20rpx;
  border: 2rpx dashed #ccc;
  text-align: center;
  border-radius: 10rpx;
  color: #666;
}

/* 图片预览 */
.preview-box {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 20rpx;
}

.preview-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}